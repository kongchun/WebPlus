.tech-title{
  color: #222;
  margin: 0;
  font-weight: bold;
}
.tech-table{
  font-size: 28rpx;
  border:1rpx solid #DBDBDB;
  border-bottom:0;
  margin: 40rpx auto;
}
.tech-tr{
  border-bottom:1rpx solid #DBDBDB;
}
.tech-td{
  display: inline-block;
}
.right-border{
