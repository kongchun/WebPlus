/* pages/salary/index.wxss */
@import "/template/tech-table.wxss";
.header{
  width:100%;
  height:380rpx;
  background-position: no-repeat;
  background-color: #4F81F5;
  background-size: 750rpx auto;
  margin: 0 aoto;
  text-align: center;
  font-family:"微软雅黑";
  color:white;
}

.header .title{
  padding-top:80rpx;
  font-size:28rpx;
}
.header .salary{
  padding-top:30rpx;
  font-size:90rpx;
  font-family: DIN;
}

.header .avg-price-compare{
    font-size: 28rpx;
}
.p_up{
  color: rgb(218, 80, 114);
}
.p_down{
  color: rgb(129, 241, 0);
}

.chart-container{
  height: 450rpx;
  width: 700rpx;
  margin: 0 auto;
}
ff-canvas {
  width: 100%;
  height: 100%;
}
.container{
  background-color:#F6F6FA;
}
.card{
  background-color:#FFF;
  width:750rpx;
  margin:10rpx auto;
}
.card_title{
  border-left: 8rpx solid #21B9E2;
  padding-left: 20rpx;
  font-size: 30rpx;
  font-weight: 700;
  height: 38rpx;
  line-height: 38rpx;
  margin: 20rpx 0 30rpx 30rpx;
}
.hidden{
  display: none;
}
.aboutus {
  margin:50rpx 0 80rpx 0;
}
.aboutus .info{
  color:rgb(51, 51, 51);
  font-size: 14px;
  line-height: 22.4px;
  margin-bottom:20rpx;
  text-align: center;
}
.aboutus .info .wechat_public{
  color:rgb(96, 127, 166);
  font-size: 14px;
  font-weight: 700;
}
.rank__list {
  padding: 0 30rpx 30rpx;
}

.rank__item {
  width: 690rpx;
  padding: 30rpx 0;
  border-bottom: 1rpx dashed #ddd;
  position: relative;
  display: flex;
  background-color: #fff;
  color: #333333;
}

.rank__item--first {
  padding: 30rpx;
  text-align: center;
  overflow: hidden;
  background-color: rgba(142, 185, 245, .52);
  color: #8EB9F5;
  border: 0;
  flex-direction: column;
}

.rank__item--last {
  border-bottom: 0;
}

.rank__no {
  width: 80rpx;
  font-size: 30rpx;
  font-weight: bold;
  text-align: center;
  color: #8EB9F5;
}

.no__1{
  color: #F54545;
}

.no__2{
  color: #FF8547;
}

.no__3{
  color: #FFAC38;
}

.rank__icon {
  max-width: 80rpx;
  max-height:80rpx;
}

.rank__icon--first {
  border-radius: 50%;
  margin: 0 auto 10rpx;
  animation: rank__icon--first 20s infinite linear;
}

@keyframes rank__icon--first {
  0% {
    transform: rotate(0);
  }
  100% {
    transform: rotate(360deg);
  }
}

.rank__info {
  width: 540rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx;
}

.rank__comp {
  width: 470rpx;
  font-size: 25rpx;
  overflow: hidden;
}

.rank__name {
  width: 400rpx;
  padding-top: 5rpx;
  font-size: 25rpx;
  font-weight: bold;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  float: left;
}

.rank__score {
  font-size: 24rpx;
  color: #FFF;
  overflow: hidden;
  float: right;
  background-color: #FF664F;
  border:0rpx solid orangered;
  padding: 4rpx 12rpx;
  border-radius: 2rpx;
}

.rank__detail {
  width: 100%;
  font-size: 25rpx;
  word-break: break-all;
  word-wrap: break-word;
}

.rank__tip {
  text-align: center;
  font-size: 28rpx;
  color: #FFF;
  padding: 0 30rpx 30rpx;
}